{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "rootDir": "api",
    "outDir": "dist/api",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true
  },
  "include": ["api/**/*.ts", "api/**/*.d.ts"]
}
